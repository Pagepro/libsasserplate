{
  "root": {
    "src": "./src",
    "dest": "./static",
    "dist": "./dist"
  },

  "tasks": {
    "static": {
      "src": "src",
      "dest": "static"
    },
    "js": {
      "src": "js",
      "dest": "static/js",
      "entries": {
        "app": ["./app.js"]
      },
      "extensions": ["js", "json"],
      "extractSharedJs": false
    },

    "css": {
      "src": "scss",
      "dest": "css",
      "autoprefixer": {
        "grid": true,
        "browsers": ["> 0%"]
      },
      "sass": {
        "indentedSyntax": true,
        "includePaths": [
          "./node_modules/normalize.css"
        ]
      },
      "extensions": ["sass", "scss", "css"]
    },

    "html": {
      "src": "templates",
      "dest": "./",
      "dataFile": "data/global.json",
      "htmlmin": {
        "collapseWhitespace": true
      },
      "extensions": ["html", "json", "tpl"],
      "excludeFolders": ["layouts", "partials", "macros", "data", "components"]
    },

    "images": {
      "src": "img",
      "dest": "img",
      "extensions": ["jpg", "png", "svg", "gif"]
    },

    "fonts": {
      "src": "fonts",
      "dest": "fonts",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "iconFont": {
      "src": "icons",
      "dest": "fonts",
      "sassDest": "generated",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "svgsprites": {
      "src": "svg",
      "dest": ".",
      "extensions": ["svg"]
    },

    "production" : {
      "rev": true
    },

    "favicon": {
      "src": ".",
      "name": "favicon.ico",
      "dest": "."
    }
  }
}
